<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wavebigfish.mapper.UserMapper">
    <insert id="insertUser" parameterType="com.wavebigfish.model.User">
        insert into user (userId, userName, password, telephone, salt, registerTime)
            value (#{userId}, #{userName}, #{password}, #{telephone}, #{salt}, #{registerTime})
    </insert>

    <delete id="deleteUser" parameterType="java.lang.Long">
        delete
        from user
        where userId = #{id}
    </delete>

    <update id="insertFile" parameterType="com.wavebigfish.model.User">
        update user
        set userName=#{userName},
            password=#{password},
            telephone=#{telephone},
            salt=#{salt},
            registerTime=#{registerTime}
        where userId = #{userId}
    </update>

    <select id="insertFile" parameterType="java.lang.Long">
        select *
        from user
        where userId = #{id}
    </select>

    <select id="getUsers" resultType="com.wavebigfish.model.User">
        select *
        from user
    </select>

</mapper>
