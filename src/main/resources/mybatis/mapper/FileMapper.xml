<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wavebigfish.mapper.FileMapper">
    <insert id="insertFile" parameterType="com.wavebigfish.model.File">
        insert into file (fileId, timeStamp, fileUrl, fileSize)
            value (#{fileId}, #{timeStamp}, #{fileUrl}, #{fileSize})
    </insert>

    <delete id="deleteFile" parameterType="java.lang.Long">
        delete
        from file
        where fileId = #{id}
    </delete>

    <update id="insertFile" parameterType="com.wavebigfish.model.File">
        update file
        set timeStamp=#{timeStamp},
            fileUrl=#{fileUrl},
            fileSize=#{fileSize}
        where fileId = #{fileId}
    </update>

    <select id="insertFile" parameterType="java.lang.Long">
        select *
        from file
        where fileId = #{id}
    </select>

    <select id="getFiles" resultType="com.wavebigfish.model.File">
        select *
        from file
    </select>

</mapper>
